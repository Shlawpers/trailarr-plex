// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Trailarr",

    "build": {
        "dockerfile": "Dockerfile"
    },
	"runArgs": [
		"-p=7888:7888"
	],

	// Mount appdata folder for persistent storage
	"mounts": [
		"source=/var/appdata/trailarr-dev,target=/data,type=bind,consistency=cached",
		"source=/media/all/Media,target=/media,type=bind,consistency=cached"
	],

	// Set workspace folder to /app so that the project is in the right place
	// "workspaceMount": "source=${containerWorkspaceFolder},target=/app,type=bind,consistency=cached",
	// "workspaceFolder": "/app",


	"containerEnv": {
		"PYTHONPATH": "${containerWorkspaceFolder}/backend"
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"Angular.ng-template",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.debugpy",
				"ms-azuretools.vscode-docker",
				"GitHub.copilot",
				"ms-python.black-formatter",
				"ms-python.flake8",
				"Gruntfuggly.todo-tree",
				"MohammadBaqer.better-folding",
				"aaron-bond.better-comments",
				"usernamehw.errorlens",
				"KevinRose.vsc-python-indent",
				"qwtel.sqlite-viewer",
				"oderwat.indent-rainbow"
			]
		}
	},
	
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "startup.sh",

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
